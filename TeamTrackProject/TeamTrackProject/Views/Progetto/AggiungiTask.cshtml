@{
    ViewData["Title"] = "Aggiungi una nuova task";
}

<h2 class="text-center">@ViewData["Title"]</h2>

<div class="container d-flex justify-content-center">

    <div class="card-body">
        <form id="taskForm">
            <div class="form-group">
                <label for="nome" class="control-label">Nome della task</label>
                <input type="text" id="nome" name="nome" class="form-control" required />
                <span id="nomeError" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="descrizione" class="control-label">Descrizione</label>
                <input type="text" id="descrizione" name="descrizione" class="form-control" required />
                <span id="descrizioneError" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="priorità" class="control-label">Priorità della task</label>
                <select id="priorità" name="priorità" class="form-control" required>
                    <option value="0">Alta</option>
                    <option value="1">Media</option>
                    <option value="2">Bassa</option>
                </select>
            </div>

            <div class="form-group">
                <label for="dataInizio" class="control-label">Data di inizio</label>
                <input type="datetime-local" id="dataInizioTask" name="dataInizioTask" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="dataFineTask" class="control-label">Data di fine</label>
                <input type="datetime-local" id="dataFineTask" name="dataFineTask" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="stato" class="control-label">Stato della task</label>
                <select id="stato" name="stato" class="form-control" required>
                    <option value="0">Da fare</option>
                    <option value="1">In corso</option>
                    <option value="2">Completata</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary btn-block">Crea</button>
        </form>
    </div>

</div>
