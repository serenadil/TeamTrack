@{
    ViewData["Title"] = "Unisciti a un progetto";
}

<h2>@ViewData["Title"]</h2>
<div class="container d-flex justify-content-center">
    <form id="iscrizioneForm" class="w-50">
        <div class="form-group">
            <label for="codice" class="control-label">Codice di Accesso</label>
            <input type="text" id="codice" name="codice" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="password" class="control-label">Password del Progetto</label>
            <input type="password" id="password" name="password" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary btn-block">Iscriviti</button>
    </form>
</div>

@section Scripts {
    <script>
        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
            return null;
        }

        document.getElementById('iscrizioneForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const codice = document.getElementById('codice').value;
            const password = document.getElementById('password').value;
            const userId = getCookie('adminId');
            if (!userId) {
                console.error('ID utente non trovato nei cookie!');
                return;
            }

            try {
                const response = await fetch(`/api/progetti/iscrizione/${userId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    },
                    body: new URLSearchParams({
                        codice: codice,
                        password: password
                    })
                });

                if (response.ok) {
                    const result = await response.json();
                    if (result) {
                        alert('Iscrizione al progetto avvenuta con successo!');
                        window.location.href = 'Progetti/DettagliProgetto';
                    } else {
                        alert('Iscrizione fallita. Controlla il codice e la password.');
                    }
                } else {
                    const errorText = await response.text();
                    console.error('Errore nella risposta API:', errorText);
                }
            } catch (error) {
                console.error('Errore nella richiesta API:', error);
            }
        });
    </script>
}

